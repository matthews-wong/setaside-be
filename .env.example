# =============================================
# SET ASIDE - ENVIRONMENT CONFIGURATION
# =============================================
# Copy this file to .env and fill in the values

# =============================================
# APPLICATION
# =============================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# =============================================
# SUPABASE CONFIGURATION
# =============================================
# Get these values from your Supabase project settings
# Dashboard → Settings → API

# Your Supabase project URL
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anon/public key (for RLS-enforced operations)
SUPABASE_ANON_KEY=your-anon-key

# Supabase service role key (bypasses RLS - use carefully!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================
# JWT CONFIGURATION
# =============================================
# IMPORTANT: Generate a strong secret for production!
# You can use: openssl rand -base64 64

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================
# BCRYPT CONFIGURATION
# =============================================
# Number of salt rounds for password hashing (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# =============================================
# CORS CONFIGURATION
# =============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================
# STORAGE CONFIGURATION
# =============================================
# Name of the Supabase storage bucket for product images
STORAGE_BUCKET_NAME=product-images

# Maximum file size for uploads (in bytes, 5MB = 5242880)
MAX_FILE_SIZE=5242880

# =============================================
# RATE LIMITING (Optional)
# =============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=debug
